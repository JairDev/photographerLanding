---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import { PortableText } from "astro-portabletext";
import { useSanityClient } from "@sanity/astro";

const client = useSanityClient();
const projects = await client.fetch(`*[_type == "projects"]{
  title,
  place,
  date,
  "slug": slug.current,
  "image": image.asset->url,
  "alt": image.alt
}`);

const about = await client.fetch(`*[_type == "about"][0]{
  "avatar": avatar.asset->url,
  "alt": avatar.alt
}`);

const services = await client.fetch(`*[_type == "services"]{
  service,
  description
}`);

const testimonials = await client.fetch(`*[_type == "testimonials"]{
  name_client,
  testimonial,
  "avatar": avatar.asset->url,
  "alt": avatar.alt
}`);
---

<Layout title="Andrea Fotografía">
  <main class="main">
    <section class="hero">
      <div class="overlap">
        <div class="overlap-group">
          <div class="headline">
            <div class="jacob-gr-nberg">Andrea <br />Martinez</div>
            <div class="before-layer">
              <div class="photographer">FOTÓGRAFA</div>
              <div class="visual-artist">&amp; ARTISTA VISUAL</div>
            </div>
          </div>
          <div class="image-wrapper">
            <Image
              src={projects[0].image}
              alt={projects[0].alt}
              width={400}
              height={600}
            />
          </div>
        </div>
        <div class="image">
          <div class="div">
            <div class="image-2">
              <!-- <img class="image-client" src={about.avatar} /> -->
              <Image
                src={about.avatar}
                alt={about.alt}
                width={200}
                height={200}
              />
            </div>
            <div class="text-wrapper">Hola, soy Andrea</div>
          </div>
          <div class="button">
            <div class="overlap-group-2">
              <div class="circle">
                <div class="work-with-me">TRABAJA<br />CONMIGO</div>
              </div>
              <div class="border"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="scroll-down">
        <img class="arrow" src="img/arrow.svg" />
        <div class="scroll-down-explore">
          Scroll Down<br />&amp; Explore
        </div>
      </div>
    </section>

    <section class="services">
      <div class="frame">
        <div class="rectangle"></div>
        <div class="text-wrapper">Servicios</div>
      </div>
      <div class="grid">
        {
          services.map((service, index) => (
            <div class="row">
              <div class="text-wrapper-2">{`0${index + 1}`}</div>
              <div class="grid-2">
                <div class="text-wrapper-3">{service.service}</div>
                <div class="div-wrapper">
                  <PortableText value={service.description} />
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class="latest-work">
      <div class="grid">
        <div class="title">
          <div class="text-wrapper">TRABAJOS</div>
          <div class="latest">Recientes</div>
        </div>
        <!-- <div class="button-text">
          <div class="arrow-right">Ver Todos</div>
          <img class="icon" src="../../src/assets/svg/arrow-right.svg" />
        </div> -->
      </div>
      <div class="projects">
        {
          projects.map((project, i) => (
            <div class={`project grid-${i + 1}`}>
              <div class="overlap-group-wrapper">
                <div class="project-title">{project.title}</div>
              </div>
              <a href={`/projects/${project.slug}`}>
                <div class="image-wrapper">
                  <Image
                    src={project.image}
                    alt={project.alt}
                    width={400}
                    height={600}
                  />
                </div>
              </a>
              <div class="wrapper-project-info">
                {project.place}
                <br />
                Septiembre 2023
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class="clients">
      <div class="grid">
        <div class="frame">
          <div class="title">
            <div class="overlap-group">
              <div class="what-my-clients">
                QUE<span class="text-wrapper"> DICEN</span> MIS
              </div>
              <div class="what-my-clients">CLIENTES</div>
            </div>
          </div>
          <p class="worked-with-over">
            <span class="span">He trabajado con mas de</span>
            <span class="text-wrapper-2"> 50 CLIENTES</span>
            <span class="span"> en todo el país</span>
          </p>
        </div>
        <button class="button">
          <div class="default">Trabaja Conmigo</div>
          <img class="icon" src="../../src/assets/svg/arrow-right.svg" />
        </button>
      </div>
      <div class="wrapper-testimonial">
        <div class="testimonial">
          <div class="image-wrapper"></div>
          {
            testimonials.map((testimonial) => (
              <div class="content">
                <div class="grid-2">
                  <div class="wrapper-comment-avatar">
                    <Image
                      src={testimonial.avatar}
                      alt={testimonial.alt}
                      width={80}
                      height={80}
                    />
                  </div>
                  <div>
                    <div class="wrapper-title-quote">
                      <img
                        class="quote"
                        src="../../src/assets/svg/comillas.svg"
                      />
                      <p class="text-wrapper-3">{testimonial.testimonial}</p>
                    </div>
                    <div class="grid-3">
                      <div class="subnav">
                        <div class="text-wrapper-4">
                          {testimonial.name_client}
                        </div>
                        <div class="line" />
                        <div class="text-wrapper-4">Photoshoot</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
        <div class="line-2"></div>
      </div>
    </section>
  </main>
</Layout>

